@model BurgerApp.Models.Burger

@{
    ViewData["Title"] = "AddBurger";
}
<head>
    <style>
     body{
         background-color:#48D1CE;
         
     }
     .row{
         justify-content:center;
         font-size:20px;
     }
     h1{
         text-align:center;
     }
    </style>
</head>
<h1>Add Burger</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBurger">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Burger_Name" class="control-label"></label>
                <input asp-for="Burger_Name" class="form-control" required/>
                <span asp-validation-for="Burger_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Burger_Location" class="control-label"></label>
                <input asp-for="Burger_Location" class="form-control" required />
                <span asp-validation-for="Burger_Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" required/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
            <div>
    <a asp-action="GetAllBurgers">Back</a>
</div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
